{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "..",
    "module": "ESNext",
    "target": "ESNext",
    "strict": false,
    "noUnusedLocals": false,
    "jsx": "preserve",
    "baseUrl": "..",
    "paths": {
      "bunchee": ["./src/index.ts"],
      "testing-utils": ["./test/testing-utils/index.ts"]
    }
  },
  "include": [
    "./**/*.test.ts",
    "./**/*.test.tsx",
    "./testing-utils",
    "../src/**/*.test.ts",
    "../src/**/*.test.tsx"
  ]
}
