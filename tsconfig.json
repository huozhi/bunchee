{
  "include": ["./src", "./*.ts", "./*.d.ts"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES6"],
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
