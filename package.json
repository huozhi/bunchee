{
  "name": "bunchee",
  "version": "3.0.1",
  "description": "zero config bundler for js/ts/jsx libraries",
  "bin": {
    "bunchee": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "jest --env node",
    "test:update": "TEST_UPDATE_SNAPSHOT=1 yarn test",
    "clean": "rm -rf ./dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "yarn clean && yarn build && chmod +x ./dist/cli.js && yarn test",
    "build:cli": "tsx ./src/cli.ts ./src/cli.ts --runtime node -f cjs -o ./dist/cli.js",
    "build:main": "tsx ./src/cli.ts ./src/index.ts --runtime node -f cjs",
    "build": "yarn build:main && yarn build:cli"
  },
  "type": "commonjs",
  "keywords": [
    "bundler",
    "javascript",
    "bundle",
    "typescript",
    "jsx",
    "zero-config",
    "library"
  ],
  "files": [
    "dist",
    "*.md"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">= 16"
  },
  "author": "huozhi (github.com/huozhi)",
  "repository": {
    "type": "git",
    "url": "https://github.com/huozhi/bunchee.git"
  },
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-commonjs": "24.0.1",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.2",
    "@rollup/plugin-replace": "5.0.2",
    "@swc/core": "1.3.46",
    "@swc/helpers": "0.5.0",
    "arg": "5.0.2",
    "pretty-bytes": "5.6.0",
    "publint": "0.1.11",
    "rollup": "3.20.2",
    "rollup-plugin-dts": "5.3.0",
    "rollup-plugin-preserve-shebang": "1.0.1",
    "rollup-plugin-swc3": "0.8.1",
    "tslib": "2.5.0"
  },
  "peerDependencies": {
    "typescript": ">=4.1.0 <5.0.0 || >=5.0.0 <6.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "@swc/helpers": {
      "optional": true
    }
  },
  "devDependencies": {
    "@huozhi/testing-package": "1.0.0",
    "@swc/jest": "0.2.22",
    "@types/jest": "29.0.0",
    "jest": "29.0.1",
    "react": "18.2.0",
    "tsx": "3.12.6",
    "typescript": "4.9.5"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "bunchee": "<rootDir>/src/index.ts"
    },
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  }
}
